Page {
  background: #fff;
}

.container {
  width: 100%;
  display: flex;
  overflow: hidden;
}

.left_tabbar {
  width: 25%;
}

.right_content {
  width: 75%;
}

.left_tabbar_item {
  position: relative;
  color: #7c7c7c;
  font-size: 26rpx;
  width: 100%;
  padding: 30rpx 0;
  text-align: center;
}
.border{
  position: absolute;
  left: 0;
  top:0;
  width: 6rpx;
  height: 100%;
  background: #44B09F;
  opacity: 0;
}

.left_tabbar_list {
  background: #F5F5F5;
}

.left_tabbar .active {
  background: #fff;
  color: #44B09F;
  transition: all 0.5s;
  animation: show 0.5s;
}
.left_tabbar .active .border{
  opacity: 1;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.tab_panel .rightBox {
  margin: 20rpx;
}


.loading_box {
  width: 100%;
  margin: 20rpx auto;
  text-align: center;
}
.indexList{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}
.indexList li{
  width: 48%;
  height: 320rpx;
  background-size:cover;
  background-repeat:no-repeat;
  background-position:center center;
  margin-bottom: 20rpx;
}

@-webkit-keyframes show {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}

@keyframes show {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}





.loading3 {
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  background: #44B09F;
  border-radius: 50%;
  margin-left: 15rpx;
}

.loading3_1 {
  -webkit-animation: loading3 1s linear infinite alternate;
  animation: loading3 1s linear infinite alternate;
}

.loading3_2 {
  -webkit-animation: loading3 1s linear infinite alternate;
  animation: loading3 1s linear infinite alternate;
  animation-delay: 0.5s;
}

.loading3_3 {
  -webkit-animation: loading3 1s linear infinite alternate;
  animation: loading3 1s linear infinite alternate;
  animation-delay: 1s;
}

.groupbox{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  right: 0;
  top:0;
  bottom: 0;
  margin: auto;
  background: rgba(0,0,0,0.6);
  z-index: 99;
}
.groupimg{
  position: absolute;
  left: 0;
  right: 0;
  top:0;
  bottom: 0;
  margin: auto;
  overflow: hidden;
  width: 50%;
  height: 200rpx;
  background: #fff;
  border-radius: 10px;
  text-align:center;
  font-size:28rpx;
  color:#666;
  padding: 20rpx;
}
.groupimg button{
  background: #44B09F;
  font-size: 28rpx;
  color: #fff;
  width: 80%;
  margin-top: 40rpx;
}

@-webkit-keyframes loading3 {
  0% {
    transform: scale(1);
  }

  100% {
    transform: scale(0);
  }
}

@keyframes loading3 {
  0% {
    transform: scale(1);
  }

  100% {
    transform: scale(0);
  }
}