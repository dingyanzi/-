page{
    background-color: #2E2F33;
}
.imgBox{
    background-size:cover;
    background-repeat:no-repeat;
    background-position:center center;
}
.posterBg{
    padding: 30rpx 0;
    padding-bottom: 90rpx;
}
.posterBg .posterBox{
    position: relative;
    margin: 0 auto;
    z-index: 0;
    overflow: hidden;
}
.posterBg .posterBox .imgBg{
    display: block;
    margin: 0 auto;
}
.posterBox text{
    position: absolute;
    z-index: 1;
    white-space:nowrap;
    letter-spacing:-0.5px;
}
.action{
    width: 75%;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.action text{
    font-size: 29rpx;
}
.action view{
    text-align: center;
    font-size: 24rpx;
    color: #fff;
    width: 25%;
}
.action .icoBox{
    width:70%;
    height:94rpx;
    line-height: 90rpx;
    border-radius: 100%;
    background:#58595D;
    margin: 0px auto;
    margin-bottom: 8px;
}
.action .icoBox i{
    font-size: 44rpx;
    display: block;
    margin: 0 auto;
}
#save{
    width: 80%;
    margin: 20px auto;
    text-align: center;
    font-size: 22rpx;
    color: #fff;
    background: #34B7A5;
    padding:20rpx 0;
    border-radius:5rpx;

}

/*更换模板*/
.changeModel,.changePhoto,.changeText,.changeEdit{
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    background: #000;
    height: 0;
    transition: all 0.5s;
    z-index: 3;
}
.changeModel.open,.changePhoto.open,.changeText.open,.changeEdit.open{
    transition: all 0.5s;
    height: 360rpx;
}
.changeModel .tip,.changePhoto .tip,.changeText .tip,.changeEdit .tip{
    display: flex;
    justify-content: space-between;
    padding: 20rpx;
    margin-bottom: 20rpx
}
.changeModel .tip text,.changePhoto .tip text,.changeText .tip text,.changeEdit .tip text{
    font-size: 28rpx;
    color: #fff;
    margin-top: 4px;
}
.changeModel .tip .close,.changePhoto .tip .close,.changeText .tip .close,.changeEdit .tip .close{
    color: #44B09F;
    font-size: 22rpx;
    border: 1px solid #44B09F;
    padding: 10rpx;
    margin-right: 40rpx;
}
.recommend_scroll{
    height:200rpx;
    margin-bottom: 20rpx;
    white-space:nowrap;
  
}
::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
.recommend_hot_box{
    display:inline-block;
    width:160rpx;
    height:200rpx;
    margin-right:24rpx;
    position: relative;
    overflow: hidden;
}
.recommend_hot_box .activeBg{
    width: 158rpx;
    height: 198rpx;
    background:rgba(57,177,150,0.4);
    border: 1px solid #44B09F;
    position: absolute;
    top:0;
    left: 0;
    z-index: 1;
    opacity: 0;
    transition: all 0.5s;
}
.recommend_hot_box .activeBg i{
    position: absolute;
    top:65rpx;
    left: 55rpx;
    z-index: 2;
    font-size: 20px;
    color: #10cdaf;
}
.recommend_hot_box:first-child{
    margin-left: 24rpx;
}
.recommend_photo .recommend_hot_box:first-child{
    margin-left: 0;
}
.recommend_hot_box .recommend_hot_image{
    width:160rpx;
    height:200rpx;
}
.recommend_hot_box.active .activeBg{
    opacity: 1;
    transition: all 0.5s;
}
.recommend_hot_box .txt{
    color: #fff;
    font-size: 26rpx;
    white-space:pre-line;
    line-height:150%;
}
.recommend_Txt{
    background: #222325;
    padding: 10rpx;
    line-height: 30rpx;
}
.uploadPhoto{
    width:140rpx;
    height:200rpx;
    float: left;
    margin-left: 10rpx;
    text-align: center;
    line-height: 30rpx;
}
.uploadPhoto i{
    display: block;
    margin: 0 auto;
    padding-top: 30px;
    color: #fff;
    font-size: 20px;
}
.uploadPhoto text{
    color: #fff;
    font-size: 22rpx;
}

.recommend_photo{
    width: 80%;
    float: right;
}
.changeEdit .inputTxt{
    width:91%;
    height:24px;
    line-height:24px;
    background:#fff;
    margin:0 auto;
    padding:0 15rpx;
}
.groupbox{
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    right: 0;
    top:0;
    bottom: 0;
    margin: auto;
    background: rgba(0,0,0,0.9);
    z-index: 99;
}
.groupimg{
    position: absolute;
    left: 0;
    right: 0;
    top:0;
    bottom: 0;
    margin: auto;
    overflow: hidden;
    margin-top: 50rpx;
}
.groupimg canvas{
    opacity: 1;
    margin: 0 auto;
    border:1px dashed #fff;
}
.groupimg .canvasImg{
    display: block;
    margin: 0 auto;
    border:1px dashed #fff;
}
#saveS{
    width: 50%;
    margin: 0 auto;
    background: #34B7A5;
    color: #fff;
    margin-top: 10rpx
}
